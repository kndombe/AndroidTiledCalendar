<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/month_view_cell_container"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp">
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/month_view_cell_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_margin="4dp"
        android:layout_centerHorizontal="true"/>
    <LinearLayout
        android:id="@+id/month_view_cell_tiles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/month_view_cell_date"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/month_tile_1"
        android:layout_width="match_parent"
        android:textColor="#fff"
        android:padding="1dp"
        android:layout_height="20dp"
        android:layout_marginTop=".5dp"
        android:layout_below="@id/month_view_cell_date" />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/month_tile_2"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:textColor="#fff"
        android:padding="1dp"
        android:layout_marginTop=".5dp"
        android:layout_below="@id/month_tile_1" />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/month_tile_3"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:textColor="#fff"
        android:padding="1dp"
        android:layout_marginTop=".5dp"
        android:layout_below="@id/month_tile_2" />

</RelativeLayout>